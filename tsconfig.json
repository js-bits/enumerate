{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["typedef-utils", "jest"],
    "typeRoots": ["./node_modules/@types", "./node_modules/@js-bits"],
    "target": "es2022",
    "lib": ["es6", "es2016", "es2017", "es2018", "es2019"]
  },
  "exclude": ["node_modules", "dist", "typedef-utils"]
}
